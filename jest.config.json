{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/", "__tests__/migrations/"
  ],
  "setupFiles": [
    "dotenv/config"
  ],
  "testMatch": [
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true,
      "useESM": true
    }
  }
}
